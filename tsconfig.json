{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "checkJs": false,
    "outDir": "./dist/esm",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist/typings",
    "declaration": true,
    "types": [
      "node",
      "db.js"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@model": [
        "./model"
      ],
      "@infr/*": [
        "./infr/*"
      ],
      "@services": [
        "./services"
      ],
      "@domain/*": [
        "./domain/*"
      ],
      "@domain": [
        "./domain"
      ]
    },
    "plugins": [
      {
        "transform": "@hypertype/tools/plugins/absolute",
        "after": true
      }
    ]
  },
  "exclude": [
    "node_modules",
    "specs",
    "**/*.spec.ts",
    "dist"
  ]
}
