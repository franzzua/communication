{
  "extends": "@cmmn/tools/compile/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@model": [
        "model/index.ts"
      ],
      "@proxy": [
        "proxy/index.ts"
      ],
      "@infr/*": [
        "infr/*"
      ],
      "@services": [
        "services/index.ts"
      ],
      "@domain/*": [
        "domain/*"
      ],
      "@domain": [
        "domain/index.ts"
      ],
      "@yjs/webrtc": [
        "yjsWebRTC/index.ts"
      ],
      "@cmmn/sync": [
        "sync/index.ts"
      ],
      "@cmmn/sync/webrtc/client": [
        "sync/webrtc/client/index.ts"
      ],
      "@cmmn/sync/webrtc/server": [
        "sync/webrtc/server/index.ts"
      ]
    }
  },

  "include": [
    "**/*.json",
    "**/*.ts",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist"
  ]
}
