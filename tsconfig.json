{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "checkJs": false,
    "outDir": "./dist/esm",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./dist/typings",
    "declaration": true,
    "esModuleInterop": true,
    "types": ["node", "db.js"],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "paths": {
      "@model": [        "./model"      ],
      "@infr/*": [        "./infr/*"      ],
      "@services": [        "./services"      ],
      "@domain/*": [        "./domain/*"      ],
      "@domain": [        "./domain"      ],
      "solidocity": [ "../solidocity" ],
      "@m-ld/m-ld/*": [ "../m-ld-js/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "specs",
    "**/*.spec.ts",
    "dist"
  ]
}
