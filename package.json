    "linkedom": "^0.14.21",
    "luxon": "2.4.*",
    "node-fetch": "^3.2.10",
    "ts-jest": "latest",
    "typescript": "4.6.x",
    "typescript-transform-paths": "^3.3.1"
  },
  "cmmn": {
    "main": {
      "input": "dist/esm/entry/index.js",
      "module": "es",
      "html": "./entry/index.html",
      "dedupe": [
        "lib0"
      ],
      "external": [
        "@cmmn.*",
        "luxon"
      ],
      "alias": {
        "luxon": "luxon/build/es6/luxon.js"
      },
      "mount": {},
      "browser": true,
      "port": 4001
