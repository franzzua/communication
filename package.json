{
  "name": "communication",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "ttsc --watch",
    "yjs:weboscket": "PORT=1234 node ./node_modules/y-websocket/bin/server.js",
    "bundle": "cmmn bundle ./dist/esm/entry/index.js --watch --run",
    "build:client": "hypertype client --watch",
    "build:client:prod": "hypertype client --prod",
    "build:run": "hypertype client --watch --run",
    "build:worker": "hypertype worker --watch",
    "build:server": "hypertype server --watch",
    "build:server:prod": "hypertype server --prod",
    "build": "ttsc && hypertype client && hypertype worker && cp ./.github/workflows/staticwebapp.config.json ./dist",
    "ci": "ttsc && hypertype client --prod",
    "server": "http-server ./dist -p 8080",
    "server:watch": "nodemon ./dist/server.js",
    "signal": "y-webrtc-signaling",
    "start": "node dist/server.js",
    "bundle&publish": "ttsc && npm run build:client:prod && npm run publish"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cmmn/app": "1",
    "@cmmn/core": "1",
    "@cmmn/ui": "1",
    "@cmmn/domain": "1",
    "@cmmn/tools": "1.0.3",
    "cellx-collections": "^1.0.3",
    "cellx-decorators": "^1.6.3",
    "is-mobile": "^3.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "ttypescript": "1.5.13",
    "typescript": "4.4.3",
    "typescript-transform-paths": "^3.3.1",
    "y-indexeddb": "^9.0.6",
    "y-webrtc": "^10.2.2",
    "yjs": "^13.5.23"
  },
  "hypertype": {
    "client": {
      "type": "server",
      "index": "./dist/esm/entry/index.js",
      "html": "./entry/index.html",
      "port": 3001,
      "publicPath": "/"
    },
    "server": {
      "type": "node",
      "index": "./server/index.ts",
      "target": "server.js"
    },
    "worker": {
      "type": "worker",
      "index": "./entry/worker.ts",
      "target": "worker.js"
    }
  }
}
