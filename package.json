  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cmmn/app": "1.6.x",
    "@cmmn/cell": "1.6.x",
    "@cmmn/core": "1.6.x",
    "@cmmn/domain": "1.6.x",
    "@cmmn/infr": "^1.6.23",
    "@cmmn/server": "1.6.x",
    "@cmmn/sync": "1.6.x",
    "@cmmn/tools": "1.6.x",
    "@cmmn/ui": "1.6.x",
    "@fastify/websocket": "5",
    "@jest/globals": "latest",
    "@signal-fire/client": "^1.4.0",
    "@signal-fire/server": "^0.5.0",
    "@swc/core": "^1.3.0",
    "@swc/jest": "latest",
