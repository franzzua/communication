    "worker": {
      "dedupe": [
        "lib0"
      ],
      "browser": true,
      "input": "dist/esm/entry/worker.js"
    },
    "server": {
      "input": "dist/esm/server/server.js",
      "module": "es",
      "external": [
        "node_modules",
        "@cmmn"
      ],
      "port": 4002
    }
  },
  "dependencies": {
    "@inhauth/core": "^1.0.0",
    "@types/simple-peer": "^9.11.4",
    "jest-environment-jsdom": "^29.3.1"
